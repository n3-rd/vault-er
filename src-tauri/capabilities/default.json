{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "cors-fetch:default",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "**" }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        { "path": "**" }
      ]
    }
  ]
}