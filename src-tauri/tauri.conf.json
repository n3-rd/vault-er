{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vault-er",
  "version": "0.1.0",
  "identifier": "com.n3rd.vault-er",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "vault-er",
        "width": 800,
        "height": 600,
        "label": "main"
      },
      {
        "title": "Drop Zone",
        "width": 320,
        "height": 350,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "resizable": false,
        "label": "dropzone",
        "url": "/dropzone",
        "dragDropEnabled": true
      }
    ],
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "security": {
      "csp": "default-src 'self' ipc: https://ipc.localhost https://*.localhost:* http://localhost:*; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https: blob:; font-src 'self' data:; connect-src 'self' ipc: https: http: ws: wss:; object-src 'none'; base-uri 'self'; form-action 'self';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}